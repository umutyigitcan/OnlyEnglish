<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/satirCardViewiki">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/solcevap"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Sol Cevap"
                android:textSize="15dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/onaytik"
                />

            <ImageView
                android:id="@+id/onaytik"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintStart_toEndOf="@id/solcevap"
                android:src="@drawable/baseline_check_box_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/hatatik"/>

            <ImageView
                android:id="@+id/hatatik"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintStart_toEndOf="@id/onaytik"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/sagcevap"
                android:src="@drawable/baseline_disabled_by_default_24"/>

            <TextView
                android:id="@+id/sagcevap"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="SaÄŸ Cevap"
                android:textSize="15dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/hatatik"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>