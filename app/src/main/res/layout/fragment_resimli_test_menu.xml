<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout8"
    android:layout_width="match_parent"
    android:background="@color/logorenk"
    android:layout_height="match_parent"
    tools:context="com.example.onlyenglish.ResimliTestMenu">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:id="@+id/logo"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/levelshapekirmizi"
        android:text="1"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toStartOf="@id/ikincitest"
        android:id="@+id/birincitest"/>
    <Button
        android:layout_width="80dp"
        android:background="@drawable/levelshapekirmizi"
        android:layout_height="80dp"
        app:layout_constraintStart_toEndOf="@id/birincitest"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintEnd_toStartOf="@id/ucuncutest"
        android:id="@+id/ikincitest"
        android:text="2"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/levelshapekirmizi"
        android:text="3"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/ucuncutest"
        app:layout_constraintStart_toEndOf="@id/ikincitest"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="4"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:background="@drawable/levelshapekirmizi"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/birincitest"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toStartOf="@id/besincitest"
        android:id="@+id/dorduncutest"/>

    <Button
        android:layout_width="80dp"
        android:text="5"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/levelshapekirmizi"
        android:layout_height="80dp"
        app:layout_constraintStart_toEndOf="@id/dorduncutest"
        app:layout_constraintTop_toBottomOf="@id/ikincitest"
        app:layout_constraintEnd_toStartOf="@id/altincitest"
        android:id="@+id/besincitest"
        android:layout_marginTop="30dp"
        />

    <Button
        android:text="6"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/altincitest"
        android:background="@drawable/levelshapekirmizi"
        app:layout_constraintStart_toEndOf="@id/besincitest"
        app:layout_constraintTop_toBottomOf="@id/ucuncutest"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dorduncutest"
        android:layout_marginTop="30dp"
        android:text="7"
        android:background="@drawable/levelshapekirmizi"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/sekizincitest"
        android:id="@+id/yedincitest"/>
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toEndOf="@id/yedincitest"
        app:layout_constraintTop_toBottomOf="@id/besincitest"
        app:layout_constraintEnd_toStartOf="@id/dokuzuncutest"
        android:id="@+id/sekizincitest"
        android:text="8"
        android:textSize="40dp"
        android:background="@drawable/levelshapekirmizi"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/dokuzuncutest"
        android:text="9"
        android:background="@drawable/levelshapekirmizi"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/sekizincitest"
        app:layout_constraintTop_toBottomOf="@id/altincitest"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.4"
        android:layout_marginLeft="30dp"
        android:textSize="15dp"
        android:background="@drawable/kayitshape"
        android:text="LEVEL ARTTIR"
        android:textStyle="bold"
        android:textColor="@color/butonmavisi"
        app:layout_constraintEnd_toStartOf="@id/levelazalt"
        android:layout_marginBottom="40dp"
        android:id="@+id/levelarttir"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.4"
        android:layout_marginRight="30dp"
        android:textColor="@color/butonmavisi"
        android:textStyle="bold"
        android:text="LEVEL AZALT"
        android:textSize="15dp"
        android:id="@+id/levelazalt"
        android:background="@drawable/kayitshape"
        android:layout_marginBottom="40dp"
        app:layout_constraintStart_toEndOf="@id/levelarttir"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mevcut Level: "
        android:id="@+id/textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/levelarttir"
        app:layout_constraintTop_toBottomOf="@id/sekizincitest"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/butonmavisi"/>



</androidx.constraintlayout.widget.ConstraintLayout>