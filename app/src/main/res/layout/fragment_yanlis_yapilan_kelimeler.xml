<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/logorenk"
    tools:context=".KelimeKuiz">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/kelimegirdi"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kelimegetir"
        app:layout_constraintWidth_percent="0.8">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/girdi"
            android:hint="Kelimeyi giriniz..."
            android:textColor="@color/black"
            android:textStyle="normal">

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:id="@+id/logo">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kelimegetir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:textSize="40dp"
        android:text="Kelime..."
        android:textColor="@color/black"
        android:textStyle="bold"
        >
    </TextView>

    <Button
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/kayitshape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintTop_toBottomOf="@id/kelimegirdi"
        android:layout_marginTop="30dp"
        android:text="Kontrol Et!"
        android:textColor="@color/butonmavisi"
        android:textSize="25dp"
        android:id="@+id/kontrol"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doğru Sayısı: "
        android:id="@+id/dogru"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/kontrol"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yanlış Sayısı: "
        android:textColor="@color/black"
        android:id="@+id/yanlis"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/dogru"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>