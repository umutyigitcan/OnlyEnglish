<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout21"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kelimesavasibackground"
    tools:context="com.example.onlyenglish.KelimeArenasiOyunEkrani">
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.1"
        android:text="KATEGORİ"
        android:background="@color/kelimesavasıkategori"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/kategori"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kategori"
        android:id="@+id/rv"
        />

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/kelimearenasichat"
        android:hint="Cevap..."
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv"
        app:layout_constraintEnd_toStartOf="@id/gonder"
        android:layout_marginTop="30dp"
        android:id="@+id/cevap"
        app:layout_constraintWidth_percent="0.4" />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintWidth_percent="0.3"
        android:text="Cevapla"
        android:id="@+id/gonder"
        android:textStyle="bold"
        android:textSize="15dp"
        android:background="@drawable/butonshapeee"
        app:layout_constraintStart_toEndOf="@id/cevap"
        app:layout_constraintTop_toBottomOf="@id/rv"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>