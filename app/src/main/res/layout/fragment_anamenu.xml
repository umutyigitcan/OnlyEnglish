<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:background="@color/logorenk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Anamenu">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/logo"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintWidth_percent="0.7"
        android:background="@drawable/butontasarim"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:layout_marginTop="30dp"
        android:text="Çeviri Oyunu"
        android:textSize="13dp"
        android:textStyle="bold"

        android:id="@+id/butonbir"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:textStyle="bold"
        android:background="@drawable/butontasarim"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="İngilizce Resimli Test"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@id/butonbir"
        app:layout_constraintWidth_percent="0.7"
        android:layout_marginTop="20dp"
        android:id="@+id/butoniki"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/butoniki"
        app:layout_constraintWidth_percent="0.7"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="13dp"
        android:text="İngilizce - Türkçe Hikayeler"
        android:background="@drawable/butontasarim"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:id="@+id/butonuc"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/butonuc"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_marginTop="20dp"
        android:text="Online Kelime Arenası"
        android:background="@drawable/butontasarim"
        android:textColor="@color/white"
        android:id="@+id/butondört"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintWidth_percent="0.7"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/butondört"
        android:text="İngilizce Sohbet Et"
        android:background="@drawable/butontasarim"
        android:textStyle="bold"
        android:textSize="13dp"
        android:textColor="@color/white"
        android:id="@+id/sohbet"/>


</androidx.constraintlayout.widget.ConstraintLayout>